---
interface Props {
  imagesrc: string
  headerText: string
  href?: string
}

const { imagesrc, headerText, href } = Astro.props
---

<div
  class={`project-card ${href ? 'clickable' : ''}`}
  style={{
    width: '100%',
    height: '250px',
    borderRadius: '12px',
    overflow: 'hidden',
    backgroundSize: 'cover',
    backgroundPosition: 'center',
    backgroundImage: `url(${imagesrc})`,
    position: 'relative',
    display: 'flex',
    flexDirection: 'column',
    justifyContent: 'flex-end',
    transition: 'transform 0.3s ease, box-shadow 0.3s ease',
    cursor: href ? 'pointer' : 'default',
  }}
  {...(href && { 'data-href': href })}
>
  <div class="project-card-overlay">
    <h3 class="project-card-title">{headerText}</h3>
    {href && <span class="project-card-link">Learn More â†’</span>}
  </div>
</div>

<script>
  // Add click handler for cards with href
  document.querySelectorAll('.project-card[data-href]').forEach(card => {
    card.addEventListener('click', () => {
      const href = card.getAttribute('data-href');
      if (href && href !== '#') {
        window.location.href = href;
      }
    });
  });
</script>
