---
import '../styles/reset.css'
import '../styles/index.css'
import '../styles/App.css'
import BaseLayout from '../layouts/base.astro'
import Join from '../components/join.astro'
import { clubEmail, linksPageLinks } from '../data'
---

<BaseLayout title="Links">
  <div
    class="main-container"
    style="padding-top: 120px; display: flex; background: linear-gradient(#230508 70%, var(--text-dark));"
  >
    <div
      class="links-container"
      style="margin: auto; max-width: 30em; width: 100%; display: flex; flex-direction: column; gap: 2em; padding: 0 2em;"
    >
    <a href={`mailto:${clubEmail}`}>
      <div
        style="width: 100%; padding: 20px; border-radius: 25px; border-style: solid; border-color: #380D0D; background-color: #250F0F;"
      >
        <h2>Email</h2>
        <p>
          For general inquiries, reach out to our leadership team via email &rarr; {clubEmail}.
        </p>
      </div>
      </a>
      {
        linksPageLinks.map((link) => (
          <a target="_blank" href={link.href}>
            <div style="width: 100%; padding: 20px; border-radius: 25px; border-style: solid;">
              <h2>{link.name}</h2>
            </div>
          </a>
        ))
      }
    </div>
  </div>
  <Join theme="dark" />
</BaseLayout>
